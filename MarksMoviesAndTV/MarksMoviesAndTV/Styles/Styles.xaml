                                        <Setter Target="RootGrid.(RevealBrush.State)" Value="Pressed" />
                                        <Setter Target="ButtonIcon.Foreground" Value="{ThemeResource SystemControlForegroundAccentBrush}" />
                                        <Setter Target="ButtonBorder.BorderBrush" Value="{ThemeResource SystemControlForegroundAccentBrush}" />
                                        <Setter Target="ButtonBorder.BorderThickness" Value="2" />
                                    </VisualState.Setters>
                                    <Storyboard>
                                        <PointerDownThemeAnimation Storyboard.TargetName="RootGrid" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
