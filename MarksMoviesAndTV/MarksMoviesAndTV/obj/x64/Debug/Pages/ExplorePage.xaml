<Page x:ConnectionId='1'
    x:Class="MarksMoviesAndTV.ExplorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:MarksMoviesAndTV.Classes"
    xmlns:controls="using:MarksMoviesAndTV.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MarksMoviesAndTV"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='2' x:Name="AppTitleBar" Background="{ThemeResource CustomAcrylicBrush}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='42' x:Name="BackButton"                          Style="{StaticResource AppTitleBarBackButtonStyle}" />
            <TextBlock Grid.Column="1" Style="{StaticResource AppTitleBarTextBlockStyle}" Text="Movies &amp; TV" />
        </Grid>
        <Grid x:ConnectionId='3' x:Name="TopNavControlGrid" Grid.Row="1">
            <controls:TopNavControl x:ConnectionId='41' x:Name="TopNavControl" />
        </Grid>

        <ScrollViewer Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid x:ConnectionId='4' x:Name="SpotlightControlGrid">
                    <controls:SpotlightControl />
                </Grid>

                <Grid x:ConnectionId='5' x:Name="ExploreNavControlGrid" Grid.Row="1" Margin="0,0,0,24">
                    <controls:ExploreNavControl />
                </Grid>

                <Grid x:ConnectionId='6' x:Name="MovieRow_Trailers" Grid.Row="2" Style="{StaticResource MovieRowGridStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MovieRowHeaderTextBlockStyle}" Text="Trailers" />
                    <Button x:ConnectionId='35' x:Name="ShowAllButtonTrailers"                                     Style="{StaticResource MovieRowShowAllButtonStyle}" />
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="24,0,24,0"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Hidden"
                        VerticalScrollMode="Disabled">
                        <GridView x:ConnectionId='36'
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemContainerStyle="{StaticResource MovieItemGridViewItemStyle}"
                                                                     
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate                           >
                                    <Grid x:ConnectionId='37' Style="{StaticResource MovieItemGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="72" />
                                        </Grid.RowDefinitions>
                                        <Border Style="{StaticResource MovieItemBoxartBorderStyle}" />
                                        <Image x:ConnectionId='38'                               Style="{StaticResource MovieItemBoxartImageStyle}" />
                                        <StackPanel Grid.Row="1">
                                            <TextBlock x:ConnectionId='39' Style="{StaticResource MovieItemTitleTextBlockStyle}"                            />
                                            <TextBlock x:ConnectionId='40' Style="{StaticResource MovieItemSubTitleTextBlockStyle}"                               />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </ScrollViewer>
                </Grid>

                <Grid x:ConnectionId='7' x:Name="MovieRow_360Videos" Grid.Row="3" Style="{StaticResource MovieRowGridStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MovieRowHeaderTextBlockStyle}" Text="360&#176; videos" />
                    <Button x:ConnectionId='29' x:Name="ShowAllButton360Videos"                                      Style="{StaticResource MovieRowShowAllButtonStyle}" />
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="24,0,24,0"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Hidden"
                        VerticalScrollMode="Disabled">
                        <GridView x:ConnectionId='30'
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemContainerStyle="{StaticResource MovieItemGridViewItemStyle}"
                                                                      
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate                           >
                                    <Grid x:ConnectionId='31' Style="{StaticResource MovieItem360VideoGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="72" />
                                        </Grid.RowDefinitions>
                                        <Border Style="{StaticResource MovieItemBoxartBorderStyle}" />
                                        <Image x:ConnectionId='32'                               Style="{StaticResource MovieItem360VideoBoxartImageStyle}" />
                                        <StackPanel Grid.Row="1">
                                            <TextBlock x:ConnectionId='33' Style="{StaticResource MovieItemTitleTextBlockStyle}"                            />
                                            <TextBlock x:ConnectionId='34' Style="{StaticResource MovieItemSubTitleTextBlockStyle}"                               />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </ScrollViewer>
                </Grid>

                <Grid x:ConnectionId='8' x:Name="MovieRow_NewMovies" Grid.Row="4" Style="{StaticResource MovieRowGradientBackgroundGridStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Margin="24,48,0,24" Style="{StaticResource MovieRowHeaderTextBlockStyle}" Text="New movies" />
                    <Button Style="{StaticResource MovieRowShowAllButtonStyle}" />
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="24,0,24,0"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Hidden"
                        VerticalScrollMode="Disabled">
                        <GridView x:ConnectionId='24'
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemContainerStyle="{StaticResource MovieItemGridViewItemStyle}"
                                                                      
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate                           >
                                    <Grid x:ConnectionId='25' Style="{StaticResource MovieItemGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="72" />
                                        </Grid.RowDefinitions>
                                        <Border Style="{StaticResource MovieItemBoxartBorderStyle}" />
                                        <Image x:ConnectionId='26'                               Style="{StaticResource MovieItemBoxartImageStyle}" />
                                        <StackPanel Grid.Row="1">
                                            <TextBlock x:ConnectionId='27' Style="{StaticResource MovieItemTitleTextBlockStyle}"                            />
                                            <TextBlock x:ConnectionId='28' Style="{StaticResource MovieItemSubTitleTextBlockStyle}"                               />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </ScrollViewer>
                </Grid>

                <Grid x:ConnectionId='9' x:Name="MovieRow_NewTVShows" Grid.Row="5" Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MovieRowHeaderTextBlockStyle}" Text="New TV shows" />
                    <Button Style="{StaticResource MovieRowShowAllButtonStyle}" />
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="24,0,24,0"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Hidden"
                        VerticalScrollMode="Disabled">
                        <GridView x:ConnectionId='19'
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemContainerStyle="{StaticResource MovieItemGridViewItemStyle}"
                                                                       
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate                            >
                                    <Grid x:ConnectionId='20' Style="{StaticResource MovieItemGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="72" />
                                        </Grid.RowDefinitions>
                                        <Border Style="{StaticResource MovieItemBoxartBorderStyle}" />
                                        <Image x:ConnectionId='21'                               Style="{StaticResource MovieItemBoxartImageStyle}" />
                                        <StackPanel Grid.Row="1">
                                            <TextBlock x:ConnectionId='22' Style="{StaticResource MovieItemTitleTextBlockStyle}"                             />
                                            <TextBlock x:ConnectionId='23' Style="{StaticResource MovieItemSubTitleTextBlockStyle}"                                />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </ScrollViewer>
                </Grid>

                <Grid x:ConnectionId='10' x:Name="MovieRow_SalesAndSpecials" Grid.Row="6" Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MovieRowHeaderTextBlockStyle}" Text="Sales &amp; specials" />
                    <Button Style="{StaticResource MovieRowShowAllButtonStyle}" />
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="24,0,24,0"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Hidden"
                        VerticalScrollMode="Disabled">
                        <GridView x:ConnectionId='14'
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemContainerStyle="{StaticResource MovieItemGridViewItemStyle}"
                                                                             
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate                           >
                                    <Grid x:ConnectionId='15' Style="{StaticResource MovieItemGridStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="72" />
                                        </Grid.RowDefinitions>
                                        <Border Style="{StaticResource MovieItemBoxartBorderStyle}" />
                                        <Image x:ConnectionId='16'                               Style="{StaticResource MovieItemBoxartImageStyle}" />
                                        <StackPanel Grid.Row="1">
                                            <TextBlock x:ConnectionId='17' Style="{StaticResource MovieItemTitleTextBlockStyle}"                            />
                                            <TextBlock x:ConnectionId='18' Style="{StaticResource MovieItemSubTitleTextBlockStyle}"                               />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </ScrollViewer>
                </Grid>

                <Grid x:ConnectionId='11' x:Name="MovieRow_FeaturedCollections" Grid.Row="7" Margin="0,0,0,48">
                    <Image Width="1920" Source="../Assets/explore-page-movie-row_featured-collections.png" Stretch="Uniform" />
                    <Button x:ConnectionId='13'
                        x:Name="ShowAllButtonFeaturedCollections"
                        Margin="0,52,20,0"
                        VerticalAlignment="Top"
                        Foreground="Black"
                        Style="{StaticResource MovieRowShowAllButtonStyle}" />
                </Grid>

                <Grid x:ConnectionId='12' x:Name="FooterControlGrid" Grid.Row="8">
                    <controls:FooterControl />
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

