<Page x:ConnectionId='1'
    x:Class="MarksMoviesAndTV.ExplorePageL2_360VideosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:MarksMoviesAndTV.Classes"
    xmlns:controls="using:MarksMoviesAndTV.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MarksMoviesAndTV"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='2' x:Name="AppTitleBar" Background="{ThemeResource CustomAcrylicBrush}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='10' x:Name="BackButton"                          Style="{StaticResource AppTitleBarBackButtonStyle}" />
            <TextBlock Grid.Column="1" Style="{StaticResource AppTitleBarTextBlockStyle}" Text="Movies &amp; TV" />
        </Grid>
        <Grid x:ConnectionId='3' x:Name="TopNavControlGrid" Grid.Row="1">
            <controls:TopNavControl x:ConnectionId='9' x:Name="TopNavControl" />
        </Grid>

        <ScrollViewer Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Margin="24,40,0,24"
                    FontSize="40"
                    FontWeight="Light"
                    Text="360&#176; videos" />
                <GridView x:ConnectionId='4'
                    Grid.Row="1"
                    Margin="24,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ItemContainerStyle="{StaticResource MovieItemGridViewItemStyle}"
                                                              
                    SelectionMode="None">
                    <GridView.ItemTemplate>
                        <DataTemplate                           >
                            <Grid x:ConnectionId='5' Style="{StaticResource MovieItem360VideoGridStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="72" />
                                </Grid.RowDefinitions>
                                <Border Style="{StaticResource MovieItemBoxartBorderStyle}" />
                                <Image x:ConnectionId='6'                               Style="{StaticResource MovieItem360VideoBoxartImageStyle}" />
                                <StackPanel Grid.Row="1">
                                    <TextBlock x:ConnectionId='7' Style="{StaticResource MovieItemTitleTextBlockStyle}"                            />
                                    <TextBlock x:ConnectionId='8' Style="{StaticResource MovieItemSubTitleTextBlockStyle}"                               />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

