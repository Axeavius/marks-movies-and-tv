<Page x:ConnectionId='1'
    x:Class="MarksMoviesAndTV.PersonalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:MarksMoviesAndTV.Classes"
    xmlns:controls="using:MarksMoviesAndTV.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MarksMoviesAndTV"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='2' x:Name="AppTitleBar" Background="{ThemeResource CustomAcrylicBrush}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='11' x:Name="BackButton"                          Style="{StaticResource AppTitleBarBackButtonStyle}" />
            <TextBlock Grid.Column="1" Style="{StaticResource AppTitleBarTextBlockStyle}" Text="Movies &amp; TV" />
        </Grid>

        <Grid x:ConnectionId='3' x:Name="TopNavControlGrid" Grid.Row="1">
            <controls:TopNavControl x:ConnectionId='10' x:Name="TopNavControl" />
        </Grid>

        <Grid x:ConnectionId='4' x:Name="PersonalNavControlGrid" Grid.Row="2">
            <controls:PersonalNavControl />
        </Grid>

        <ScrollViewer Grid.Row="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Margin="24,18,0,16" Orientation="Horizontal">
                    <TextBlock Margin="0,0,4,0">Sort by:</TextBlock>
                    <TextBlock Margin="0,0,24,0" Foreground="{StaticResource SystemControlForegroundAccentBrush}">Date added</TextBlock>
                </StackPanel>
                <TextBlock Grid.Row="1" Style="{StaticResource MovieRowHeaderTextBlockStyle}" Text="All folders" />
                <GridView
                    Grid.Row="2"
                    Margin="24,0,0,48"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ItemContainerStyle="{StaticResource MovieItemPersonalVideoGridViewItemStyle}"
                    SelectionMode="None">
                    <GridViewItem>
                        <Grid Width="165" Margin="0,0,24,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="165" />
                                <RowDefinition Height="75" />
                            </Grid.RowDefinitions>
                            <Border Grid.RowSpan="2" Style="{StaticResource MovieItemBoxartBorderStyle}" />
                            <Grid Background="#454545">
                                <FontIcon
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="56"
                                    Foreground="#B5B5B5"
                                    Glyph="&#xE8B7;" />
                            </Grid>
                            <Grid Grid.Row="1" Padding="8,8,0,0" Background="#626262">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Music Videos" />
                                <TextBlock
                                    Grid.Row="1"
                                    FontSize="14"
                                    Opacity="0.8"
                                    Text="3 items" />
                                <FontIcon
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Margin="0,0,12,12"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="24"
                                    Foreground="White"
                                    Glyph="&#xE8B7;" />
                            </Grid>
                        </Grid>
                    </GridViewItem>
                    <GridViewItem>
                        <Grid Width="165" Margin="0,0,24,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="165" />
                                <RowDefinition Height="75" />
                            </Grid.RowDefinitions>
                            <Border Grid.RowSpan="2" Style="{StaticResource MovieItemBoxartBorderStyle}" />
                            <Grid Background="#454545">
                                <FontIcon
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="56"
                                    Foreground="#B5B5B5"
                                    Glyph="&#xE8B7;" />
                            </Grid>
                            <Grid Grid.Row="1" Padding="8,8,0,0" Background="#626262">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Videos" />
                                <TextBlock
                                    Grid.Row="1"
                                    FontSize="14"
                                    Opacity="0.8"
                                    Text="0 items" />
                                <FontIcon
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Margin="0,0,12,12"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="24"
                                    Foreground="White"
                                    Glyph="&#xE8B7;" />
                            </Grid>
                        </Grid>
                    </GridViewItem>
                    <GridViewItem Width="165" Style="{StaticResource AddPersonalFolderButtonGridViewItemStyle}">
                        <Button Style="{StaticResource AddPersonalFolderButtonStyle}" />
                    </GridViewItem>
                </GridView>
                <TextBlock Grid.Row="3" Style="{StaticResource MovieRowHeaderTextBlockStyle}" Text="All videos" />
                <GridView x:ConnectionId='5'
                    Grid.Row="4"
                    Margin="24,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ItemContainerStyle="{StaticResource MovieItemPersonalVideoGridViewItemStyle}"
                                                                   
                    SelectionMode="None">
                    <GridView.ItemTemplate>
                        <DataTemplate                                   >
                            <Grid x:ConnectionId='6' Style="{StaticResource MovieItemPersonalVideoGridStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="72" />
                                </Grid.RowDefinitions>
                                <Border Style="{StaticResource MovieItemBoxartBorderStyle}" />
                                <Image x:ConnectionId='7'                               Style="{StaticResource MovieItemPersonalVideoBoxartImageStyle}" />
                                <StackPanel Grid.Row="1">
                                    <TextBlock x:ConnectionId='8' Style="{StaticResource MovieItemTitleTextBlockStyle}"                                    />
                                    <TextBlock x:ConnectionId='9' Style="{StaticResource MovieItemSubTitleTextBlockStyle}"                                       />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

